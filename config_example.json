{
  "monitors": [
    {
      "name": "Front Door",
      "normallyHigh": true,
      "gpio": 17,
      "momentary": false,
      "pull": "up",
      "deviceClass": "door",
      "reporters": [
        {
          "type": "mqtt",
          "broker": "tcp://home-assistant:1883",
          "topic": "home/security/frontdoor"
        },
        {
          "type": "log"
        }
      ]
    },
    {
      "name": "Doorbell Button",
      "normallyHigh": true,
      "gpio": 27,
      "momentary": true,
      "pull": "up",
      "reporters": [
        {
          "type": "mqtt",
          "broker": "tcp://home-assistant:1883",
          "topic": "home/doorbell/pressed"
        },
        {
          "type": "log"
        }
      ]
    },
    {
      "name": "Motion Sensor",
      "normallyHigh": false,
      "gpio": 22,
      "momentary": true,
      "pull": "down",
      "deviceClass": "motion",
      "reporters": [
        {
          "type": "mqtt",
          "broker": "tcp://home-assistant:1883",
          "topic": "home/security/motion"
        }
      ]
    }
  ],
  "homeAssistant": {
    "enabled": true,
    "broker": "tcp://home-assistant:1883",
    "discoveryPrefix": "homeassistant",
    "availabilityTopic": "security-monitor/availability",
    "username": "mqtt_user",
    "password": "mqtt_password"
  }
}
